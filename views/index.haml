.row
	- unless @empty	
		.col-md-4
			- if @patents and (@patents.is_a? Feedjira::Parser::RSS or @patents.is_a? Hash)
				%h2= 'Patentes'
				- @patents.keys.each do |key|
					- feed = @patents[key]			
					%a{:href => "#{feed.url}"}= feed.title
					%ul{:style => "max-height:70vh;overflow:scroll;"}
						- feed.entries.each do |entry|
							%li
								- if key.include? 'google'
									%a{:href => "http://www.google.com/patents/#{entry.summary.match(@patt)[1]}"}= entry.title
								- else
									%a{:href => entry.url}= entry.title
								%p= entry.summary if entry.summary
